@model InsuranceEngine.DTO.Questionnaire.QuestionPossibleAnswerDTO
@using InsuranceEngine.DTO.Utility.Enums.AdminUIEnums
@{
    ViewBag.Title = "DeletePossibleAnswer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithMenuNoTreeView.cshtml";
}

@using (Html.BeginForm())
{    
    @Html.HiddenFor(model => model.AnswerText)
    @Html.HiddenFor(model => model.AnswerValue)
    @Html.HiddenFor(model => model.DisplayOrder)
    @Html.HiddenFor(model => model.QuestionID)
    @Html.HiddenFor(model => model.QuestionPossibleAnswerID)
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Delete Possible Answer - @Model.AnswerText</h3>
        </div>
        <div class="panel-body">
            <p>Are you sure you want to delete this possible? Any answers for this possible answer will also be deleted.</p>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-1">
                        <input type="submit" value="Yes" class="btn btn-danger" />
                    </div>
                    <div class="col-sm-1">
                        @Html.ActionLink("No", "ViewQuestion", new { selectedTab = QuestionTabs.PossibleAnswers }, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}