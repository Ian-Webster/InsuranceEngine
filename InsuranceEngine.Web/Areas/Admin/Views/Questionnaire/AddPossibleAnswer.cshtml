@model InsuranceEngine.DTO.Questionnaire.QuestionPossibleAnswerDTO
@using InsuranceEngine.DTO.Utility.Enums.AdminUIEnums
@{
    ViewBag.Title = "AddPossibleAnswer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithMenu.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.QuestionPossibleAnswerID)
    @Html.HiddenFor(model => model.QuestionID)

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Add Possible Answer</h3>
        </div>
        <div class="panel-body">

            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Please correct the following</strong>;
                    @Html.ValidationSummary()
                </div>
            }

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.AnswerText, new { @class = "control-label col-sm-4 required" })
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.AnswerText, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnswerText)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AnswerValue, new { @class = "control-label col-sm-4 required" })
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.AnswerValue, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnswerValue)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DisplayOrder, new { @class = "control-label col-sm-4 required" })
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DisplayOrder)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-1">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div class="col-sm-1">
                        @Html.ActionLink("Cancel", "ViewQuestion", new { selectedTab =  QuestionTabs.PossibleAnswers}, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

