@model InsuranceEngine.DTO.Questionnaire.Admin.PageQuestionForAdminDisplayDTO
@using InsuranceEngine.DTO.Utility.Enums.AdminUIEnums
@{
    ViewBag.Title = "DeletePageQuestion";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithMenuNoTreeView.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DefaultShow)
    @Html.HiddenFor(model => model.DisplayOrder)
    @Html.HiddenFor(model => model.PageQuestionID)
    @Html.HiddenFor(model => model.Question)
    @Html.HiddenFor(model => model.QuestionName)
    @Html.HiddenFor(model => model.QuestionText)
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Delete Page - @Model.QuestionName</h3>
        </div>
        <div class="panel-body">
            <p>Are you sure you want to delete this page question? Any answers for this page question will also be deleted.</p>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-1">
                        <input type="submit" value="Yes" class="btn btn-danger" />
                    </div>
                    <div class="col-sm-1">
                        @Html.ActionLink("No", "ViewPage", "Pages", new { selectedTab = PageTabs.PageQuestions }, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Page Question Details - @Model.QuestionName</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="row">
                @Html.LabelFor(model => model.Question, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.Question</span>
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.QuestionText, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.QuestionText</span>
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.QuestionName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.QuestionName</span>
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.DisplayOrder, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.DisplayOrder</span>
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.DefaultShow, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.DefaultShow</span>
                </div>
            </div>

        </div>
    </div>
</div>