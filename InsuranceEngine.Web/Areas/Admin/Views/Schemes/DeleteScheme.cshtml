@model InsuranceEngine.DTO.Questionnaire.Admin.SchemeDTO

@{
    ViewBag.Title = "DeleteScheme";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithMenuNoTreeView.cshtml";
}
@using (Html.BeginForm())
{ 
    @Html.HiddenFor(model => model.Code)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.SchemeID)
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Delete Scheme - @Model.Name</h3>
        </div>
        <div class="panel-body">
            <p>Are you sure you want to delete this scheme? Any quotes related to this scheme will also be deleted.</p>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-1">
                        <input type="submit" value="Yes" class="btn btn-danger" />                        
                    </div>
                    <div class="col-sm-1">
                        @Html.ActionLink("No", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Scheme Details - @Model.Name</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="row">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.Name</span>
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.Code, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <span class="form-label">@Model.Code</span>
                </div>
            </div>

        </div>
    </div>
</div>

