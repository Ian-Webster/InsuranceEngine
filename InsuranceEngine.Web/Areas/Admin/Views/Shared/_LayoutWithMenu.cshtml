@using InsuranceEngine.DTO.AttributeNames

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - InsuranceEngine Phase 3 - Admin</title>
    @Styles.Render("~/bundles/cssAdmin")
    @Styles.Render("~/bundles/jsTree_css")
    @Styles.Render("~/bundles/Telerik/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/AceEditor")
    @Scripts.Render("~/bundles/select2")        
    @Scripts.Render("~/bundles/telerik.jquery")
    @Scripts.Render("~/bundles/jsTree_js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootBox")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("InsuranceEngine - Phase 3 - Admin", "Index", "Home", new { Area = "Customer" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Templates <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Question Templates", "ListQuestionTemplates", "Templates")</li>
                            <li>@Html.ActionLink("Page Templates", "ListPageTemplates", "Templates")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Schemes", "Index", "Schemes")</li>                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Info <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Customer Site", "Index", "Home", new { Area = "Customer" }, null)</li>
                            <li>@Html.ActionLink("Clear Cache", "ClearCache", "Schemes")</li>                            
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="header-spacer"></div>
    <div class="row">
    @{
        if (ViewContext.RouteData.Values.ContainsKey(RouteAttributeNames.SchemeID))
        {
            <div class="col-sm-3" style=" overflow-x:hidden;">           
                @{Html.RenderAction("TreeView", "AdminControls");}                     
            </div>
            <div class="col-sm-9">
                @RenderBody()
            </div>
        }
        else
        {
            <div class="container">
                <div class="col-sm-12">
                    @RenderBody()
                </div>
            </div>
        }
    }
    </div>
    <div class="footer-spacer"></div>
    <div class="navbar navbar-inverse footer">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <span class="navbar-brand">Insurance Engine @DateTime.Now.ToString("yyyy")</span>
            </div>
        </div>
    </div>    
    @RenderSection("scripts", required: false)
</body>
</html>


