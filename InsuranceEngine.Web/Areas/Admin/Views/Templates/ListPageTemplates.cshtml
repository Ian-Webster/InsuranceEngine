@model IEnumerable<InsuranceEngine.DTO.Questionnaire.PageTemplateDTO>

@{
    ViewBag.Title = "ListPageTemplates";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithMenu.cshtml";
}

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Page Templates</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditPageTemplate", new { pageTemplateId = item.PageTemplateID })
                    </td>
                </tr>
                }

            </table>

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-1">
                        @Html.ActionLink("Add Page Template", "AddPageTemplate", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>