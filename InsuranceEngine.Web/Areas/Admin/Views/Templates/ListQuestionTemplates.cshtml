@model IEnumerable<InsuranceEngine.DTO.Questionnaire.QuestionTemplateDTO>

@{
    ViewBag.Title = "QuestionTemplates";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithMenu.cshtml";
}

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Question Templates</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastRenderDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastRenderDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditQuestionTemplate", new { questionTemplateId = item.QuestionTemplateID }) |
                            @Html.ActionLink("Render", "RenderQuestionTemplate", new { questionTemplateId = item.QuestionTemplateID })
                        </td>
                    </tr>
                }

            </table>

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-2">
                        @Html.ActionLink("Add Question Template", "AddQuestionTemplate", null, new { @class = "btn btn-primary" })
                    </div>                    
                    <div class="col-sm-1">
                        @Html.ActionLink("Render Question Templates", "RenderQuestionTemplates", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>